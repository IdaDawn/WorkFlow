@using OneWorkFlow.Web.Models.Common.Modals
@model OneWorkFlow.Web.Models.Components.EditComponentModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditComponent")))
<div class="modal-body">
    <form name="RoleEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="rolename" type="text" name="Name" value="@Model.ComponentName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="rolename" class="form-label">@L("RoleName")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="displayname" type="text" name="DisplayName" value="@Model.ComponentSort" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="displayname" class="form-label">@L("DisplayName")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/view-resources/Views/Components/_EditComponentModal.js" asp-append-version="true"></script>
